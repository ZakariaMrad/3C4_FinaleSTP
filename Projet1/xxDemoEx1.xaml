<Window x:Class="Projet1.xxDemoEx1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock  Background="Red" Height="auto" FontSize="60">1</TextBlock>
        <TextBlock  Background="green" FontWeight="Bold" FontSize="60" Grid.Column="1">2</TextBlock>
        <TextBlock  Background="blue" FontStyle="Italic" FontSize="60" Grid.Column="2">3</TextBlock>
        <TextBlock  FontSize="60" Grid.Row="1">4</TextBlock>
        <TextBlock Background="Cyan" FontWeight="Bold" FontSize="60" Grid.Column="1" Grid.Row="1">5</TextBlock>
        <TextBlock  Background="Purple" FontStyle="Italic" FontSize="60" Grid.Column="2" Grid.Row="1">6</TextBlock>
        <TextBlock  Background="brown" FontSize="60" Grid.Row="2">7</TextBlock>
        <TextBlock Background="SaddleBrown" FontWeight="Bold" FontSize="60" Grid.Column="1" Grid.Row="2">8</TextBlock>
        <TextBlock Background="Gray" FontStyle="Italic" FontSize="60" Grid.Column="2" Grid.Row="2">9</TextBlock>
    </Grid>
</Window>
